  # Protect the shibboleth endpoint in the app
  <Location /shibboleth_login>
    AuthType shibboleth
    ShibRequestSetting requireSession 1
    Require valid-user
  </Location>

  # Let Shib through! passenger
  <Location /Shibboleth.sso>
    PassengerEnabled off
  </Location>

  # Protect the BorrowDirect endpoint with Shib, so we get a JHED
  # Also need to redirect to https on this URL, since Shib
  # insists on https
  <Location /borrow_direct>
          AuthType shibboleth
          ShibRequestSetting requireSession 1
          Require valid-user
  </Location>
